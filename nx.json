{
	"targetDefaults": {
		"validate": {
			"dependsOn": ["^build", "build"],
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/test/**/*",
				"{projectRoot}/conf/**/*"
			]
		},
		"test": {
			"dependsOn": ["^build", "build", "validate"],
			"inputs": ["{projectRoot}/src/**/*", "{projectRoot}/test/**/*", "{projectRoot}/conf/**/*"]
		},
		"build": {
			"dependsOn": ["^build", "clean", "validate", "test"],
			"inputs": [
				"{projectRoot}/src/**/*",
				"{projectRoot}/conf/**/*"
			],
			"outputs": [
				"{projectRoot}/dist"
			]
		}
	}
}