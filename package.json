{
	"name": "root",
	"private": true,
	"scripts": {
		"clean": "npx rimraf --glob .nx/cache && npx lerna run clean --concurrency=1",
		"validate": "npx lerna run validate --concurrency=1",
		"test": "npx lerna run test --concurrency=1",
		"build": "npx lerna run build --concurrency=1",
		"package": "npx lerna run package --concurrency=1",
		"install": "npx lerna exec --concurrency=1 -- npm install",
		"clean-install": "npx lerna exec --concurrency=1 -- npm ci"
	},
	"devDependencies": {
		"expose-gc": "^1.0.0",
		"lerna": "8.1.8",
		"rimraf": "6.0.1"
	},
	"notes": [
		"clean",
		"validate",
		"transpile",
		"test-transpile",
		"test",
		"package"
	]
}
