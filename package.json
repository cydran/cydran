{
	"name": "cydran",
	"version": "0.0.51",
	"description": "Unobtrusive Javascript presentation framework",
	"main": "dist/cydran.js",
	"typings": "./dist/cydran.d.ts",
	"scripts": {
		"start": "webpack -w --config webpack.dev.js",
		"build.dev": "npm run lint && npm run test && npx webpack --config webpack.dev.js && npx rimraf dist/src",
		"build.release": "npm run lint && npm run test.coverage && rimraf dist/src && npx webpack --config webpack.prod.js && npx rimraf dist/src",
		"cut.release": "npm run build.release && npx standard-version",
		"build.all": "npm run build.release && npm run docs",
		"clean": "npx rimraf dist && npx rimraf coverage",
		"test": "npx mocha --recursive -r ts-node/register -r tsconfig-paths/register src/*.spec.ts src/**/*.spec.ts",
		"test.coverage": "npm run clean && npx nyc --reporter=html --reporter=text --reporter=text-summary mocha --recursive -r ts-node/register -r tsconfig-paths/register src/*.spec.ts src/**/*.spec.ts",
		"lint": "npx tslint --project .",
		"minify": "npx terser dist/cydran.js --comments /^!/ --ecma 5 --compress --keep-fnames -o dist/cydran.min.js",
		"docs": "npx rimraf docs && npx typedoc --tsconfig ./tsconfig.json ./src"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cydran/cydran.git"
	},
	"keywords": [
		"MVVM",
		"components",
		"component",
		"framework"
	],
	"author": "The Cydran team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cydran/cydran/issues"
	},
	"homepage": "https://github.com/cydran/cydran",
	"devDependencies": {
		"@babel/core": "7.8.3",
		"@babel/preset-env": "7.8.3",
		"@types/chai": "4.2.7",
		"@types/jsdom": "^12.2.4",
		"@types/lodash": "4.14.149",
		"@types/mocha": "^5.2.7",
		"babel-loader": "8.0.6",
		"chai": "4.2.0",
		"compression-webpack-plugin": "3.1.0",
		"dts-bundle-generator": "3.3.1",
		"fs": "0.0.2",
		"jsdom": "16.0.1",
		"mocha": "7.0.0",
		"nyc": "15.0.0",
		"raw-loader": "4.0.0",
		"rimraf": "3.0.0",
		"standard-version": "7.0.1",
		"terser": "4.6.3",
		"terser-webpack-plugin": "2.3.2",
		"ts-loader": "6.2.1",
		"ts-mockito": "^2.5.0",
		"ts-node": "8.6.2",
		"tsconfig-paths": "3.9.0",
		"tslint": "5.20.1",
		"typedoc": "0.16.7",
		"typescript": "3.7.5",
		"webpack": "4.41.5",
		"webpack-cli": "3.3.10",
		"webpack-merge": "4.2.2",
		"webpack-node-externals": "1.7.2"
	},
	"dependencies": {}
}
