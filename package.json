{
	"name": "cydran",
	"version": "0.1.21",
	"description": "Unobtrusive Javascript presentation framework",
	"main": "dist/cydran.js",
	"typings": "./dist/cydran.d.ts",
	"scripts": {
		"start": "webpack -w --config webpack.dev.js",
		"build.dev": "npm run lint && npm run validate && npm run test && npx webpack --config webpack.dev.js && npx rimraf dist/src",
		"build.release": "npm run clean && npm run lint && npm run validate && npm run test.coverage && rimraf dist/src && npx webpack --config webpack.prod.js && npx rimraf dist/src && npm run test.integration && npx rimraf dist/src",
		"cut.release": "npm run build.release && npx standard-version && npm run build.release && npm run pushAndRelease",
		"pushAndRelease": "git push --follow-tags origin master && npm publish",
		"build.all": "npm run build.release && npm run docs",
		"clean": "npx rimraf dist && npx rimraf coverage",
		"test": "npx jest --config jest.config.js",
		"test.coverage": "npx jest --config jest-coverage.config.js",
		"test.integration": "npx jest --config jest-integration.config.js",
		"lint": "npx tslint --project .",
		"validate": "npx depcruise --validate .dependency-cruiser.js src",
		"graph.deps": "npx depcruise --validate --exclude \"(spec|^node_modules)\" .dependency-cruiser.js --include-only '^src' --output-type dot src | dot -T jpg > dist/dependencygraph.jpg",
		"minify": "npx terser dist/cydran.js --comments /^!/ --ecma 5 --compress --keep-fnames -o dist/cydran.min.js",
		"docs": "npx rimraf docs && npx typedoc --tsconfig ./tsconfig.json ./src"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cydran/cydran.git"
	},
	"keywords": [
		"MVVM",
		"components",
		"component",
		"framework"
	],
	"author": "The Cydran team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cydran/cydran/issues"
	},
	"homepage": "https://github.com/cydran/cydran",
	"devDependencies": {
		"@babel/core": "7.10.3",
		"@babel/preset-env": "7.10.3",
		"@babel/preset-typescript": "^7.10.1",
		"@testing-library/dom": "7.16.2",
		"@testing-library/jest-dom": "5.10.1",
		"@types/jest": "^26.0.0",
		"@types/jsdom": "12.2.4",
		"@types/lodash": "4.14.155",
		"babel-loader": "8.1.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"compression-webpack-plugin": "4.0.0",
		"dependency-cruiser": "9.7.0",
		"dts-bundle-generator": "4.3.0",
		"fs": "0.0.2",
		"jest": "^26.0.1",
		"jsdom": "16.2.2",
		"raw-loader": "4.0.1",
		"rimraf": "3.0.2",
		"standard-version": "8.0.0",
		"terser": "4.8.0",
		"terser-webpack-plugin": "3.0.6",
		"ts-loader": "7.0.5",
		"ts-mockito": "2.6.1",
		"ts-node": "8.10.2",
		"tsconfig-paths": "3.9.0",
		"tslint": "6.1.2",
		"typedoc": "0.17.7",
		"typescript": "3.9.5",
		"webpack": "4.43.0",
		"webpack-cli": "3.3.12",
		"webpack-merge": "4.2.2",
		"webpack-node-externals": "1.7.2"
	},
	"dependencies": {}
}
